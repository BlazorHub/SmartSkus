    void ValidateSku(ValidatorEventArgs e)
    {
        var sku = Convert.ToString(e.Value);
        if (sku.Length < 2)
        {
            e.Status = ValidationStatus.Error;
        }
        else
        {
            e.Status = ValidationStatus.Success;
        }
    }

